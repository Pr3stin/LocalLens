generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  name     String?
  favorites Favorite[]
}

model Favorite {
  id        String @id @default(cuid())
  name      String
  address   String?
  rating    Float?
  placeId   String
  user      User   @relation(fields: [userId], references: [id])
  userId    String
}